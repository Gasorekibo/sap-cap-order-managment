{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Order Management System for Moyo Company",
  "repository": "<Add your repository URL here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8.9.2",
    "axios": "^0.21.1",
    "chai": "^5.2.0",
    "express": "^4",
    "hdb": "^0.19.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.3.0",
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.10.0",
    "@sap/cds-dk": "^8.9.1",
    "@sap/hdi-deploy": "^5.4.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "start:local": "cds run --in-memory",
    "start:hana":"cds watch --profile hybrid",
    "build": "tsc",
    "watch": "tsc -w",
    "deploy:local": "cds deploy",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --detectOpenHandles --forceExit --coverage"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/my.db"
        }
      },
      "build": {
        "target": "dist"
      },
      "ts": true,
      "[hybrid]": {
        "db": {
          "kind": "hana"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "log": {
    "level": "info",
    "format": "json",
    "service": true
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
